{
  "manifest_version": 2,
  "name": "Simple Timer",
  "description": "Simple timer with alarm in Chrome",
  "version": "0.1",

  "permissions": ["storage"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/64.png",
    "default_popup": "popup.html"
  }
}